extends base

block content 
    if errorMsg 
        span=errorMsg
    form(method="POST") 
        input(type="text", name="name", placeholder="Name", title="Please write your name", maxlength="60", required)
        input(type="text", name="username", placeholder="Username", title="Please write username", maxlength="60", required)
        input(type="email", name="email", placeholder="Email", title="Please write your email", required)
        input(type="password", name="password", placeholder="Password", title="Please write password", required)
        input(type="password", name="confrimPassword", placeholder="Confrim Password", title="Please write password again to confrim", required)
        input(type="submit", value="Sign Up On Movie.ZIP")